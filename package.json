{
  "name": "@clusterws/cws",
  "version": "4.4.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "description": "cWS - fast C++ WebSocket implementation for Node.js",
  "scripts": {
    "lint": "tslint -c tslint.json 'lib/**/*.ts'",
    "test": "nyc mocha './tests/**/*.test.ts' --exit",
    "clean": "rimraf dist/bindings/*",
    "install": "node-gyp rebuild || exit 0",
    "build-ts": "rimraf dist/*.js && rimraf dist/*.ts && npm run lint && tsc",
    "build-cpp": "node-gyp rebuild || exit 0",
    "build-debug": "node-gyp rebuild --debug"
  },
  "keywords": [
    "tiny",
    "websocket",
    "clusterws",
    "socket",
    "cws"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ClusterWS/cWS"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nyc": "^15.0.1",
    "rimraf": "^5.0.0",
    "segfault-handler": "^1.3.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^5.0.4"
  },
  "nyc": {
    "all": true,
    "temp-directory": "./node_modules/.cache/nyc_output",
    "include": [
      "lib/**/*.ts",
      "tests/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ]
  }
}
